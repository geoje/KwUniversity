<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ManyViewActivity">

    <TextView
        android:id="@+id/tvHelloWorld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_launcher_background"
        android:gravity="center"
        android:text="Button\n아니다" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello EditText"
        android:textColor="#3498db"
        android:textStyle="italic"
        android:typeface="monospace" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="이게 바로 싱글 라인 안 준 텍스트 뷰다! 근데 싱글 라인은 디프리케이티드네! 아래에 ellipsize 도 middle로 줌" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="middle"
        android:text="이게 바로 싱글 라인 준 텍스트 뷰다!" />
    <TextView
        android:id="@+id/tvMarquee"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="10"
        android:text="이건 싱글라인 에다가 ellipsize: marquee주고 marqueeRepeatLimit를 10으로 주었다." />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:padding="20dp"
        android:scaleType="center"
        android:cropToPadding="true"
        android:background="#d35400"
        android:src="@drawable/lion" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="라이언: padding=20dp, scaleType=center, cropToPadding=true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher" />

</LinearLayout>